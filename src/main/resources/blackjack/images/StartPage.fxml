<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="blackjack.StartPageController">
    <ListView fx:id="playerListView" layoutX="20.0" layoutY="20.0" prefHeight="300.0" prefWidth="200.0"/>
    <TextField fx:id="newPlayerField" layoutX="240.0" layoutY="20.0" promptText="Enter new player name"/>
    <Button text="Create Player" layoutX="240.0" layoutY="60.0" onAction="#onCreatePlayer"/>
    <Button text="Continue" layoutX="240.0" layoutY="100.0" onAction="#onContinue"/>
</AnchorPane>
